<div class="align-center"><h1 class="display-big text-center margin-vertical gradient-text purple-blue">Rate your favourite books...</h1></div>
<% if user_signed_in? %> 
<div class="align-center"><%= link_to "Add New Book", new_book_path, class: "button" %></div>
<% end %> 
<ul class="no-bullet six column grid">
  <% @books.each do |book| %>
    <li>
      <%= link_to image_tag(book.cover), book %>
      <h3 class="text-center"><%= link_to book.title, book, class: "no-underline" %></h3>
    </li>
  <% end %>
</ul>