<%= form_with model: @book do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
      <% @book.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :author %>
      <%= form.text_field :author %>
      <% @book.errors.full_messages_for(:author).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :cover %>
      <%= form.text_field :cover %>
      <% @book.errors.full_messages_for(:cover).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
      <% @book.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>